<h1>Books</h1>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Body</td>
      <td><%= link_to "show" %></td>
			<td><%= link_to "edit" %></td>
			<td><%= link_to "destroy" %></td>
    </tr>
  </thead>
</table>
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <p><%= f.submit 'Create Book' %></p>
<% end %>
  